# EditorConfig
# https://editorconfig.org/

##############################
# Global settings
##############################

# This file is the top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 2
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

##############################
# File Extension Settings
##############################

[*.{sh,zsh}]
end_of_line = lf

[*.md]
trim_trailing_whitespace = false
